{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/vite",
      "config": { "includeFiles": ["../.env"] }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/index?path=$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}